<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/myLayout"
             android:stretchColumns="0"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">
		<TextView android:text="ID"
				  android:layout_x="30dp"
				  android:layout_y="50dp"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		<EditText android:id="@+id/editid"
				  android:inputType="number"	 
				  android:layout_x="150dp"
				  android:layout_y="50dp"
		          android:layout_width="150dp"
		          android:layout_height="40dp"/>
		<TextView android:text="Tên"
				  android:layout_x="30dp"
				  android:layout_y="100dp"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		<EditText android:id="@+id/editten"	 
				  android:inputType="text"	 
				  android:layout_x="150dp"
				  android:layout_y="100dp"
		          android:layout_width="150dp"
		          android:layout_height="40dp"/>
		<TextView android:text="Số Điện Thoại"
				  android:layout_x="30dp"
				  android:layout_y="150dp"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		<EditText android:id="@+id/editsdt"	 
				  android:inputType="number"	 
				  android:layout_x="150dp"
				  android:layout_y="150dp"
		          android:layout_width="150dp"
		          android:layout_height="40dp"/>
		<ImageView
		    android:id="@+id/imgAdd"
		    android:layout_width="68dp"
		    android:layout_height="68dp"
		    android:layout_x="35dp"
		    android:layout_y="216dp"
		    android:src="@drawable/ic_launcher_add" />

		<ImageView
		    android:id="@+id/imgModify"
		    android:layout_width="68dp"
		    android:layout_height="68dp"
		    android:layout_x="131dp"
		    android:layout_y="218dp"
		    android:src="@drawable/ic_launcher_sua" />

		<ImageView
		    android:id="@+id/imgDelete"
		    android:layout_width="68dp"
		    android:layout_height="68dp"
		    android:layout_x="224dp"
		    android:layout_y="220dp"
		    android:src="@drawable/ic_launcher_xoa" />

		<ImageView
		    android:id="@+id/imgView"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:layout_x="86dp"
		    android:layout_y="317dp"
		    android:src="@drawable/ic_launcher_timkiem" />

		<ImageView
		    android:id="@+id/imgView_All"
		    android:layout_width="68dp"
		    android:layout_height="68dp"
		    android:layout_x="194dp"
		    android:layout_y="320dp"
		    android:src="@drawable/ic_launcher_xemtc" />

		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_x="1dp"
		    android:layout_y="7dp"
		    android:gravity="center"
		    android:text="DANH BA ĐIỆN THOẠI"
		    android:textColor="#FF00CC"
		    android:textSize="20sp" />

</AbsoluteLayout>